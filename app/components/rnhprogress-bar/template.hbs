{{#if (gte (mult (div record.dollars record.goal) 100) 100)}}
   <p>${{number-format record.dollars}} / ${{number-format record.goal}}</p>
   <div class="progress" style=" background-color:white; border:1px solid #0099D8;">
     <div class="progress-bar" role="progressbar" aria-valuenow="{{mult (div record.dollars record.goal) 100}}" aria-valuemin="0" aria-valuemax="100" style="width:{{mult (div record.dollars record.goal) 100}}%; ">
       <!-- <span class="">70% </span> -->
     </div>
   </div>
   {{else}}
   <p>${{number-format record.dollars}} / ${{number-format record.goal}}</p>
   <div class="progress {{ record.division}}-border" style=" background-color:white;">
     <div class="progress-bar {{ record.division}}-bar" role="progressbar" aria-valuenow="{{mult (div record.dollars record.goal) 100}}" aria-valuemin="0" aria-valuemax="100" style="width:{{mult (div record.dollars record.goal) 100}}%; ">
       <!-- <span class="">70% </span> -->
     </div>
   </div>
{{/if}}

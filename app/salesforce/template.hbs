         {{input type="password" value=formValues.password placeholder="Password"}}<br/>
         {{input value=formValues.managername placeholder="Manager Name"}}<br/>
         {{input value=formValues.division placeholder="Division"}}<br/>
         {{input value=formValues.region placeholder="Region"}}<br/>
         <!-- {{select value=formValues.region placeholder="Region"}}<br/> -->
         {{input value=formValues.jobtitle placeholder="Job Title"}}<br/>
         <button  class="SR_btn sriloginbtn" style="background-color: #003057;">Register</button>
